{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist/",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": false,
    "declaration": true,
    "declarationDir": "./dts/",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}